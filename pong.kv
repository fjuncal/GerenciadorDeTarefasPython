<MyLayout>
    do_default_tab: False
    size_hint: 1, 1
    tab_pos: 'top_left'

    TabbedPanelItem:
        text: "Memória"
        FloatLayout:
            orientation: "vertical"

            MDLabel:
                pos_hint: {'center_x': .5, 'center_y': .97}
                text: "Memória"
                halign: "center"
                font_size: 30
                bold: True
                color:  0, 0, 200, 2

            MDLabel:
                text: "Quantidade total: "
                pos_hint: {'center_x': .5, 'center_y': .90}
                color:  0, 0, 200, 2
                bold: True
            MDLabel:
                id: label_qtdTotal
                text: ""
                pos_hint: {'center_x': .66, 'center_y': .90}
                color:  0, 140, 255, 1

            MDLabel:
                text: "Quantidade sendo usada: "
                pos_hint: {'center_x': .5, 'center_y': .80}
                color:  0, 0, 200, 2
                bold: True
            MDLabel:
                id: label_qtdSendoUsada
                text: ""
                pos_hint: {'center_x': .74, 'center_y': .80}
                color:  0, 140, 255, 1
            MDLabel:
                id: label_porcentagemUsada
                text: ""
                pos_hint: {'center_x': .54, 'center_y': .3}
                color:  0, 140, 255, 1
                halign: "center"
            MDLabel:
                text: "Porcentagem utilizada: "
                pos_hint: {'center_x': .4, 'center_y': .3}
                color:  0, 0, 200, 2
                bold: True
                halign: "center"

            MDProgressBar:
                id: progressBar_porcentagem
                pos_hint: {"center_x": .5, "center_y": .2}
                orientation: 'horizontal'
                value:
            MDIconButton:
                icon: "refresh"
                theme_text_color: "Custom"
                text_color: app.theme_cls.primary_color
                on_press: root.calculaMemoria()


    TabbedPanelItem:
        text: "CPU"
        BoxLayout:
            Label:
                text: 'CPU => '
            MDFillRoundFlatButton:
                text: 'Click me'

    TabbedPanelItem:
        text: "Disco"

        Image:
            source: "aspen.jpg"

    TabbedPanelItem:
        text: "Arquivos"
        BoxLayout:
            padding: "10dp"

            MDTextField:
                id: text_field_arquivo
                hint_text: "Escreva aqui um Diretório"
                pos_hint: {"center_x": .1, "center_y": .95}
                color_mode: 'accent'
                mode: "fill"
                helper_text: 'Insira um diretório válido'
                helper_text_mode: "on_focus"
                icon_right: "file"
            MDFillRoundFlatButton:
                text: 'Procurar'
                on_press: root.pegarArq()

            ScrollView:
                MDList:
                    id: panelArq


    TabbedPanelItem:
        text: "Server /Client"
        BoxLayout:
            padding: "10dp"







